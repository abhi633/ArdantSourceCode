@if (showModal)
{
    <div class="modal fade show " id="myModal" style="display:block" aria-modal="true" role="dialog">
        <div class="modal-dialog modal-dialog-centered" style="width: 310px">
            <div class="modal-content">

                <!-- Modal Header -->
                <div class="modal-header text-light" style="padding: 0rem 1rem !important; background-color:#009E60 !important ">
                    <h6 class="modal-title icon-box material-icons">@Title </h6>
                    <button type="button" class="close" @onclick="@ModalCancel">&times;</button>
                </div>
                <!-- Modal body -->
                <div class="modal-body text-center" style="padding: 10px">
                   
                        <p>@Message</p>
                </div>
                <!-- Modal footer -->
                <div class="modal-footer" style="padding: -0.25rem">
                    <button type="button" class="btn btn-secondary btn-sm" @onclick="@ModalCancel">Cancel</button>
                    <button type="button" class="btn btn-success btn-sm" @onclick=@ModalOk>Yes</button>
                </div>

            </div>
        </div>
    </div>
}
<hr />