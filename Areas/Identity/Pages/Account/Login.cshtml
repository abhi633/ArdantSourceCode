@page
@using Microsoft.AspNetCore.Identity
@using ArdantOffical.Areas.Identity
@using ArdantOffical.Areas.Identity.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


@model LoginModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Log in";
}




<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Ardant | Log in</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Font Awesome -->

    <link rel="stylesheet" href="/assets/plugins/fontawesome-free/css/all.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- icheck bootstrap -->
    <link rel="stylesheet" href="/assets/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- Theme style -->
    <link href="/assets/dist/css/adminlte.css" rel="stylesheet" />

    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
    <style type="text/css">
        .limiter {
            width: 100%;
            margin: 0 auto;
        }

        .container-login100 {
            width: 100%;
            min-height: 100vh;
            display: -webkit-box;
            display: -webkit-flex;
            display: -moz-box;
            display: -ms-flexbox;
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            align-items: flex-end;
            padding: 15px;
            background-repeat: no-repeat;
            background-size: cover;
            background-position: center;
            margin-right: 40px;
            position: relative;
            z-index: 1;
        }

            .container-login100::before {
                content: "";
                display: block;
                position: absolute;
                z-index: -1;
                width: 100%;
                height: 100%;
                top: 0;
                left: 0;
                background: #005bea;
                background: -webkit-linear-gradient(bottom, #005bea, #00c6fb);
                background: -o-linear-gradient(bottom, #005bea, #00c6fb);
                background: -moz-linear-gradient(bottom, #005bea, #00c6fb);
                background: linear-gradient(bottom, #005bea, #00c6fb);
                opacity: 0.1;
            }

        .wrap-login100 {
            width: 390px;
            background: transparent;
        }



        /*------------------------------------------------------------------
                        [  ]*/
        .login100-form {
            width: 100%;
            display: -webkit-box;
            display: -webkit-flex;
            display: -moz-box;
            display: -ms-flexbox;
            display: flex;
            justify-content: space-between;
            flex-wrap: wrap;
        }

        .login100-form-title {
            font-family: Montserrat-ExtraBold;
            font-size: 24px;
            color: #fff;
            line-height: 1.2;
            text-align: center;
            width: 100%;
            display: block;
        }

        /*---------------------------------------------*/
        .login100-form-avatar {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            overflow: hidden;
            margin: 0 auto;
        }

            .login100-form-avatar img {
                width: 100%;
            }

        .container-login {
            width: 98%;
            display: flex;
            margin: auto;
        }

        .btn-primary:hover {
            color: #1f1f8d;
            background-color: white !important;
            border-color: #1f1f8d !important;
        }

        .form-control {
            border: 0;
            border-bottom: 2px solid #ff850c;
            border-radius: 0;
        }

        .main-heading{
            margin-top: 80px
        }

        .inner-img{
            display: none;
        }

        @@media (max-width: 575.98px) {
            .main-heading {
                margin-top: 24px
            }

            .outer-image {
                display: none;
            }

           
        }
        @@media (min-width: 768px) and (max-width: 991.98px) {
            .outer-image
            {
                display:none;
            }
            .inner-img{
                display : block;
            }
            .main-heading
            {
               margin-top: 27px;
            }
        }

    </style>
</head>

<body>

    <div class="container-login">
        <form class="form" method="post" runat="server" autocomplete="off">
            <div asp-validation-summary="All"></div>
            <input type="hidden" asp-for="ReturnUrl" />
            <div class="row">
                <div class="col-lg-4 col-md-12 col-sm-12 pl-5 pr-5">
                    <div style="text-align: center;" class="order-lg-1">
                        <img src="/images/aardant Main Logo 2000x1500 (1).webp" alt="Aardant Main Logo" />
                    </div>
                    <div class="col-lg-8 col-md-12 inner-img">
                        <img src="/images/Ardantloginbg.jpg" class="img-fluid" />
                    </div>
                    <div class="main-heading">
                        <p style="font-size: 23px;text-align: center;">
                            Where Independence Meets Success!
                        </p>
                        <ul>
                            <li>Full scope of practice</li>
                            <li>Autonomy</li>
                            <li>Flexibility</li>
                            <li>Work-life balance</li>
                        </ul>
                    </div>

                    <br />
                    <br />
                    <p class="text-center mt-3">Sign in to start your session</p>
                    <div class="form-group mb-4">

                        <div class="form-group mb-4">
                            <input asp-for="Input.Email" class="form-control" type="text" placeholder="User Name" autocomplete="off" />
                        </div>
                        <div class="form-group mb-2">
                            <input asp-for="Input.Password" class="form-control" type="password" placeholder="Password" />
                        </div>
                        <div class="form-group d-flex flex-wrap justify-content-between align-items-center mt-3">
                            <label class="checkbox m-0 text-muted">
                                <input asp-for="Input.RememberMe" type="checkbox" />&nbsp;Remember me
                                <span></span>
                            </label>
                            <span>
                                <label class="m-0 text-muted">
                                    <a href="/account/forgotpassword">Forgot Password</a>
                                    <span></span>
                                </label>
                            </span>
                        </div>

                        <button type="submit" class="btn btn-primary font-weight-bold" style="width:100%; margin:0">Sign In</button>
                    </div>

                </div>
                <div class="col-lg-8 col-md-12 outer-image">
                    <img src="/images/Ardantloginbg.jpg" class="img-fluid" />
                </div>
            </div>
        </form>
        </div>

</body>

